extends /layouts/main

block content
    section
        .container.mt-5
            h1 Log in
            hr
            form(action="/auth/login" method="POST")
                .mb-3.mt-5
                    input(type="text" name="username" class="rounded shadow px-3 py-2 border w-100" required placeholder = "Username" value = `${oldInput["username"] ? oldInput.value("username") : ""}`)
                .mb-3.mt-5
                    input(type="password" name="password" class="rounded shadow px-3 py-2 border w-100" required placeholder = "Password")
                .mb-3.mt-5
                    button(type="submit" class="rounded shadow border px-4 py-3 mb-4 bg-aqua text-white")
                        strong Submit
                    p Don't have an account? 
                        a(href="/auth/register" class = 'text-aqua') Sign up
                