extends /layouts/main

block content
    section
        .container.mt-5
            h1 Create room
            hr
            form(action="/rooms/create" method="POST")
                .mb-3.mt-5
                    label Room name
                    input(type="text" name="name" class="rounded shadow px-3 py-2 border w-100" required placeholder = "Give your room a name" value = `${oldInput["name"] ? oldInput.value("name") : ""}`)
                .mb-3.mt-5
                    label Maximum users
                    input(type="number" min="1" max="50" name="max_users" class="rounded shadow px-3 py-2 border w-100" required placeholder = "Maximum numer of users allowed to join" value = "10")
                .mb-3.mt-5
                    button(type="submit" class="rounded shadow border px-4 py-3 mb-4 bg-aqua text-white")
                        strong Create!
                